#listview {
  background-color: @background;
  padding: 0px;
  columns: 1;
  lines: 5;
  spacing: 0px;
  cycle: true;
  dynamic: true;
  layout: vertical;
  children: [ element ];
}

#element {
  background-color: @transparent;
  text-color: @foreground;
  orientation: horizontal;
  border-radius: 0;
  padding: 10px;
  children: [element-text ];
}

#element-text {
  font: "Fira Code NF 16";
  background-color: @transparent;
  text-color: inherit;
  horizontal-align: 0.5;
  vertical-align: 0;
}

