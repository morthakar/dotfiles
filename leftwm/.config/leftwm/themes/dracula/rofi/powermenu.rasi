configuration {
  show-icons: true;
  disable-history: false;
  fullscreen: false;
  hide-scrollbar: true;
  sidebar-mode: false;
}

* {
  font: "Fira Code NF bold 12";
  foreground: #f8f8f2;
  background-color: #282a36b3;
  primary: #ff79c6;
  selected-foreground: #bd93f9;
  selected-background: #b2b2b250;
  separatorcolor: #ff79c6;
  bordercolor: #ff79c6;
  highlightcolor: #8be9fd;
  transparent: #00000000;
}

#window {
  background-color: @background;
  text-color: @foreground;
  border: 2;
  border-color: @primary;
  border-radius: 8;
  width: 20%;
  location: center;
  x-offset: 0;
  y-offset: 0;
  children: [ mainbox ];
}

#mainbox {
  children: [ prompt, listview ];
}

#inputbar {
  children:                       [ textbox ];
  background-color:               @background;
  text-color:                     @primary;
  expand:                         false;
  border:                         0px 0px 0px 0px;
  border-radius:                  0px;
  border-color:                   @primary;
  margin:                         0px;
  padding:                        10px;
}

#prompt {
  padding:                        10px;
  background-color:               @background;
  text-color:                     @primary;
  expand: false;
  //str: "î§€";
  font:                           @font;
  horizontal-align: 0.5;
}

